{
  "name": "mikrochat",
  "description": "The minimalist chat app that's all yours",
  "version": "2.0.0",
  "author": "Mikael Vesavuori",
  "license": "MIT",
  "keywords": [
    "chat",
    "chat-app",
    "slack-replacement",
    "discord-replacement",
    "teams-replacement"
  ],
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "sideEffects": [
    "./app/scripts/*.mjs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikaelvesavuori/mikrochat"
  },
  "bugs": {
    "url": "https://github.com/mikaelvesavuori/mikrochat/issues"
  },
  "homepage": "https://github.com/mikaelvesavuori/mikrochat",
  "files": [
    "/lib",
    "!/lib/**/*.map",
    "!/tests"
  ],
  "scripts": {
    "start": "npx tsx src/index.ts",
    "dev": "npx http-server -p 8000 ./app",
    "dev:https": "npx http-server -p 8000 -S -C cert.pem ./app",
    "dev:reload": "npm run build:web && mv dist/mikrochat.min.js app && clear && npm start",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "npx vitest run --coverage",
    "test:watch": "npx vitest --watch",
    "release": "bash release.sh",
    "build": "npm run clean && npm run build:web && npm run build:api",
    "build:api": "node esbuild.config.mjs",
    "build:web": "rm -rf dist && mkdir dist && node build.mjs && npm run move:webapp:files",
    "move:webapp:files": "cp -R icons dist && cp app/config.js dist && cp app/mikrosafe.min.js dist && cp app/manifest.json dist && cp app/offline.html dist && cp app/pwa.js dist && cp app/service-worker.js dist",
    "clean": "rm -rf lib && rm -rf dist && mkdir lib",
    "lint": "npx @biomejs/biome check --write ./src ./app",
    "licenses": "npx license-checker-rseidelsohn --production --plainVertical --excludePackagesStartingWith \"molnos;esbuild;@esbuild\" --out oss-licenses.txt",
    "sbom": "syft file:package-lock.json --output spdx-json > ./sbom.json",
    "scan": "grype ./sbom.json -o json",
    "package": "npm pack",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2",
    "@types/node": "latest",
    "@vitest/coverage-v8": "4",
    "esbuild": "latest",
    "html-minifier-terser": "7",
    "http-server": "14",
    "husky": "9",
    "license-checker-rseidelsohn": "4",
    "lightningcss": "1",
    "tsup": "8",
    "tsx": "4",
    "typescript": "5",
    "vitest": "4"
  },
  "dependencies": {
    "mikroauth": "latest",
    "mikroconf": "latest",
    "pikodb": "latest",
    "mikroid": "latest",
    "mikroserve": "latest"
  }
}